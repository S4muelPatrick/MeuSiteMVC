@model ContatoModel

@{
    ViewData["Title"] = "Edit Contact";
}

<div class="text-center">
    <h1 class="display-4">Contact Edit</h1>
</div>

<form asp-controller="Contato" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Enter name">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Contact</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Enter contact number">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <button type="submit" class="btn btn-primary btn-btn-block" asp-controller="Contato" asp-action="Alterar">Edit</button>
    <a class="btn btn-secondary btn-btn-block" role="button" asp-controller="Contato" asp-action="Index">Back</a>

</form>


