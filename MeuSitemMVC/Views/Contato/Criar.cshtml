@model ContatoModel

@{
    ViewData["Title"] = "Create new contact";
}

<div class="text-center">
    <h1 class="display-4">Register new contact</h1>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>

<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Username">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="contact@gmail.com">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Contact</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="(xx) xxxxx-xxxx">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <br/>

    <button type="submit" class="btn btn-primary btn-block" role="button">Add</button>
    <a class="btn btn-secondary btn-block" role="button" asp-controller="Contato" asp-action="Index">Back</a>
</form>

<script type="text/javascript">
    //Cria uma máscara para o campo celular
    $('#Celular').mask('(99) 99999-9999');
</script>
 

